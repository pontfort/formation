<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	   xmlns:jaxws="http://cxf.apache.org/jaxws"
	   xmlns:soap="http://cxf.apache.org/bindings/soap"
	   xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans 
	                       http://www.springframework.org/schema/beans/spring-beans.xsd
	                       http://cxf.apache.org/bindings/soap 
           				   http://cxf.apache.org/schemas/configuration/soap.xsd
                           http://cxf.apache.org/jaxws 
                           http://cxf.apache.org/schemas/jaxws.xsd
                           http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd">

	
	<!-- SOAP -->
	<jaxws:endpoint id="wxlogistique" implementor="#logistique" address="/logistique"  />
	
	<jaxws:endpoint id="wsPatient" implementor="#accueil" address="/accueil"  />
	
	<!-- REST -->
	<bean id="provider" class="org.codehaus.jackson.jaxrs.JacksonJsonProvider"/>
	<jaxrs:server id="restEquipement" address="/equipement">
        <jaxrs:serviceBeans>
           <ref bean="equipementRest"/>
        </jaxrs:serviceBeans>
          <jaxrs:providers>
			<ref bean="provider" />
		  </jaxrs:providers>
     </jaxrs:server>
</beans>
